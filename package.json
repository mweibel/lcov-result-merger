    "execa": "^5.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^10.0.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^19.0.3",
    "standard": "^17.0.0",
    "travis-deploy-once": "^3.0.0"
  },
  "engines": {
    "node": ">=14"
  },
